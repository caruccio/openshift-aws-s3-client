#!/bin/bash -e

set -x
source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
	-v|--version)
		version="$2"
esac

if [ -z "$AUTH_TOKEN" ]; then
	echo "AUTH_TOKEN not found. Refusing to continue. Please contact our support."
	exit 1
fi

ln -fs versions/${version:-0.0.1}/usr
ln -fs versions/${version:-0.0.1}/config
